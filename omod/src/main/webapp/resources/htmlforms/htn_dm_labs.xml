<htmlform formUuid="618e01cc-b96f-11e5-9912-ba0be0483c18" formName="Hypertension and Diabetes Laboratory tests"
          formEncounterType="6607a082-a8df-11e5-bf7f-feff819cdc9f" formVersion="1.0">

    <macros>
        proteinuria=PIH Malawi:6447
        proteinuriaNone=PIH Malawi:6698
        proteinuria1Plus=PIH Malawi:1410
        proteinuria2Plus=PIH Malawi:1408
        proteinuria3Plus=PIH Malawi:1409
        proteinuria4Plus=PIH Malawi:8608
        hivTest=PIH Malawi:2169
        ecg=PIH Malawi:6672
        creatinine=PIH Malawi:6445
        lipidProfile=PIH Malawi:8611
        ldl=PIH Malawi:1008
        hdl=PIH Malawi:1007
        triglyc=PIH Malawi:1009
        fundoscopy=PIH Malawi:6449
        no=PIH Malawi:1066
        yes=PIH Malawi:1065
        other=PIH Malawi:6408
        typical=PIH Malawi:1115
    </macros>

    <!-- Flowsheet table view -->
    <ifMode mode="VIEW" include="true">

        <table class="visit-table data-entry-table">
            <thead class="visit-table-header">
                <tr>
                    <th></th>
                    <th colspan="2">Every 3 months</th>
                    <th colspan="4">Annual monitoring</th>
                </tr>
                <tr>
                    <th>Date</th>

                    <td>Proteinuria</td>
                    <td>HIV test result</td>

                    <td>ECG</td>
                    <td>Creatinine</td>
                    <td>Lipid profile<br/></td>
                    <td>Fundoscopy</td>
                </tr>
            </thead>
            <tbody class="visit-table-body">
                <tr class="visit-table-row">
                    <td class="nowrap visit-date">
                        <!-- Encounter Date -->
                        <encounterDate/>
                    </td>
                    <td>
                        <!-- Proteinuria -->
                        <obs conceptId="$proteinuria" style="radio" answerConceptIds="6698,1410,1408,1409,8608" answerLabels="None,1+,2+,3+,4+"/>
                    </td>
                    <td>
                        <!-- HIV test -->
                        <obs conceptId="$hivTest" style="radio" answerConceptIds="1228,1229" answerLabels="R,NR"/>
                    </td>

                    <td>
                        <!-- ECG -->
                        <obs conceptId="$ecg"/>
                    </td>
                    <td>
                        <!-- Creatinine -->
                        <obs conceptId="$creatinine"/>
                    </td>
                    <td style="text-align: left;">
                        <!-- Lipid profile -->
                        <repeat with="['1115','Normal'],['8609','High lipids'],['8610','High TGs']">
                            <obs conceptId="$lipidProfile" answerConceptId="{0}" answerLabel="{1}" style="checkbox" />
                            <br/>
                        </repeat>
                    </td>
                    <td>
                        <!-- Fundoscopy -->
                        <obs conceptId="$fundoscopy"/>
                    </td>
                </tr>
            </tbody>
        </table>

    </ifMode>

    <!-- Data entry view -->
    <ifMode mode="VIEW" include="false">

        <h4 style="font-style: italic;">
            <b>Hypertension and Diabetes Patient Card: Laboratory</b>
            <span style="padding-left:50px;">Version 1</span>

            <span style="padding-left:50px;">
                <b style="padding-right:10px;">NCD Reg no:</b>
                <b>
                    <lookup complexExpression="#foreach( $id in $patientIdentifiers.get(&quot;Chronic Care Number&quot;) ) $!id #end"/>
                </b>
            </span>
        </h4>

        <span style="display:none">
            <encounterProvider default="16576"/>
        </span> <!-- Set provider to a default as not used -->

        <table class="visit-edit-table">
            <tr>
                <th>Visit Date</th>
                <td>
                    <encounterDate id="visitDate" size="20" default="today"/>
                </td>
            </tr>
            <tr>
                <th>Visit Location</th>
                <td>
                    <encounterLocation id="visitLocation"/>
                </td>
            </tr>

            <tr>
                <th>Proteinuria</th>
                <td>
                    <obs conceptId="$proteinuria" style="radio" answerConceptIds="6698,1410,1408,1409,8608" answerLabels="None,1+,2+,3+,4+"/>
                </td>
            </tr>

            <tr>
                <th>HIV test result</th>
                <td>
                    <obs conceptId="$hivTest" style="radio" answerConceptIds="1228,1229" answerLabels="R,NR"/>
                </td>
            </tr>

            <tr>
                <th>ECG</th>
                <td>
                    <obs conceptId="$ecg"/>
                </td>
            </tr>
            <tr>
                <th>Creatinine</th>
                <td>
                    <obs conceptId="$creatinine" showUnits="true"/>
                </td>
            </tr>

            <tr>
                <th>Lipid profile</th>
                <td style="text-align: left;">
                    <repeat with="['1115','Normal'],['8609','High lipids'],['8610','High TGs']">
                        <obs conceptId="$lipidProfile" answerConceptId="{0}" answerLabel="{1}" style="checkbox" />
                        <br/>
                    </repeat>
                </td>
            </tr>

            <tr>
                <th>Fundoscopy</th>
                <td colspan="8">
                    <obs conceptId="$fundoscopy"/>
                </td>
            </tr>

        </table>

        <submit/>

    </ifMode>

</htmlform>